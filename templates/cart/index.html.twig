{% extends 'logged.html.twig' %}

{% block title %}Cart summary{% endblock %}

{% block body %}
    <div class="row mt-5">
        <div class="col-md-9">
            {% if cart is not empty %}
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="row mt-12">
                    {% for item in cart.items %}
                        {{ include('cart/_item.html.twig') }}
                    {% endfor %}
                </div>
                {% else %}
                    Cart is empty
                {% endif %}
            </div>
        </div>
        <div class="col-md-3">
            {{ include('cart/_summary.html.twig') }}
        </div>
    </div>
{% endblock %}