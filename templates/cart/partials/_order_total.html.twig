<div class="card border-secondary mb-5">
    <div class="card-header bg-secondary border-0">
        <h4 class="font-weight-semi-bold m-0">Order Total</h4>
    </div>
    <div class="card-body">
        <h5 class="font-weight-medium mb-3">Products</h5>
        {% for item in cart.items %}
            <div class="d-flex justify-content-between">
                <p>{{ item.name|capitalize }} ({{ item.quantity }})</p>
                <p>{{ (item.totalPrice / 100)|format_currency('USD') }}</p>
            </div>
        {% endfor %}
        <hr class="mt-0">
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Tax</h6>
            <p>{{ summary.tax|format_currency('USD') }}</p>
        </div>

        <div class="d-flex justify-content-between mb-3 pt-1">
            <h6 class="font-weight-medium">Subtotal</h6>
            <h6 class="font-weight-medium">{{ summary.subTotal|format_currency('USD') }}</h6>
        </div>
        <div class="d-flex justify-content-between">
            <h6 class="font-weight-medium">Shipping</h6>
            <h6 class="font-weight-medium">{{ summary.shipping|format_currency('USD') }}</h6>
        </div>
    </div>
    <div class="card-footer border-secondary bg-transparent">
        <div class="d-flex justify-content-between mt-2">
            <h5 class="font-weight-bold">Total</h5>
            <h5 class="font-weight-bold">{{ summary.total|format_currency('USD') }}</h5>
        </div>
    </div>
</div>
