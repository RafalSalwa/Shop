{% extends 'logged.html.twig' %}
{% block title %}Shipping{% endblock %}
{% block body %}
    <div class="row mt-5">
        <div class="col-md-3 col-sm-4 col-xs-6">
            <a class="btn btn-primary"
               href="{{ path("cart_shipment_address_new") }}">Add new address</a>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-9">
            {% if deliveryAddresses is not empty %}
                {{ include("shipping/_addr.html.twig") }}
            {% else %}
                No addressess found. Please add new delivery address
            {% endif %}
            {{ include("cart/_item_simple.html.twig") }}
        </div>
        <div class="col-md-3">
            {{ include('cart/_summary.html.twig') }}
            <div class="row ml-3 mr-3 mt-4">
                <a href="{{ path("order_create_pending") }}" class="btn btn-warning input-block-level">shipment</a>
            </div>
        </div>
    </div>



{% endblock %}