{% extends 'base.html.twig' %}

{% block title %}Confirm{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container-fluid d-flex flex-column bg-secondary text-dark py-5 py-10">
        <div id="intro" class="bg-image shadow-2-strong">
            <div class="mask d-flex align-items-center">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-xl-5 col-md-8 bg-white  rounded-5 shadow-5-strong p-5">
                            Great, Once your account is confirmed we can start shopping.
                            <a href="{{ path('app_index') }}">
                                <button class="btn btn-primary btn-block my-5">Start shopping</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
    <script>
        $( document ).ready(function() {
            min = 100;
            max = 999999;
            result = Math.floor(Math.random() * (max - min) + min);

            $("#registration_form_email").val('interview' + result + '@interview.com');
            $("#registration_form_password_first").val('VeryG00dPass!');
            $("#registration_form_password_second").val('VeryG00dPass!');
        });
    </script>
{% endblock %}