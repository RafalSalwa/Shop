<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
    <meta name="description" content=""/>
    <link rel="icon" type="image/x-icon" href="assets/favicon.png"/>
    <meta name="author" content=""/>
    <title>{% block title %}Welcome Interviewer!{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
              integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
              crossorigin="anonymous">
        <link
                href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
                rel="stylesheet"
        />
        <!-- Google Fonts -->
        <link
                href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
                rel="stylesheet"
        />
        <!-- MDB -->
        <link
                href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.1/mdb.min.css"
                rel="stylesheet"
        />
        <link href="/css/custom.css" rel="stylesheet">
        <link href="https://rafalsalwa.github.io/interview-client-php/public/css/styles.css"
              rel="stylesheet"/>
    {% endblock %}

    {% block javascripts %}
        <script
                src="https://code.jquery.com/jquery-3.7.1.min.js"
                integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
                crossorigin="anonymous"></script>
    {% endblock %}
</head>
<body>
<div class="d-flex" id="wrapper">
    <!-- Sidebar-->
    <div class="border-end bg-white" id="sidebar-wrapper">
        <div class="sidebar-heading border-bottom bg-light">
            Interview App
        </div>
        <div class="list-group list-group-flush">
            <a class="list-group-item list-group-item-action list-group-item-light p-3" href="{{ path("app_index") }}">Home</a>
            <a class="list-group-item list-group-item-action list-group-item-light p-3" href="{{ path("plan_index") }}">Subscription
                plans</a>
            <a class="list-group-item list-group-item-action list-group-item-light p-3"
               href="{{ path("product_index", {"page":1}) }}">Products</a>
            <a class="list-group-item list-group-item-action list-group-item-light p-3"
               href="{{ path("cart_index") }}">Cart</a>
            <a class="list-group-item list-group-item-action list-group-item-light p-3"
               href="{{ path("order_index", {"page":1}) }}">Orders</a>
            <a class="list-group-item list-group-item-action list-group-item-light p-3"
               href="{{ path("oauth_token_index") }}">OAuth Token</a>
            <div id="menu">
                <div class="panel list-group">
                    <a href="#" class="list-group-item" data-bs-toggle="collapse" data-bs-target="#sm"
                       data-bs-parent="#menu">gRPC
                        <span class="glyphicon glyphicon-envelope pull-right"></span>
                    </a>
                    <div id="sm" class="sublinks collapse">
                        <a href="{{ path("grpc_index") }}" class="list-group-item small">
                            <span class="glyphicon glyphicon-chevron-right"></span> info
                        </a>
                        <a href="{{ path("grpc_user_create") }}" class="list-group-item small">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            Create user</a>
                        <a href="{{ path("grpc_user_verify") }}" class="list-group-item small">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            Verify Account</a>
                        <a href="{{ path("grpc_user_token") }}" class="list-group-item small">
                            <span class="glyphicon glyphicon-chevron-right"></span>
                            Get tokens</a>
                    </div>
                </div>
            </div>
            <a class="list-group-item list-group-item-action list-group-item-light p-3"
               href="{{ path('app.swagger_ui') }}">Docs</a>
        </div>
    </div>
    <!-- Page content wrapper-->
    <div id="page-content-wrapper">
        <!-- Top navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button"
                               data-bs-toggle="dropdown" aria-haspopup="true"
                               aria-expanded="false">{{ app.user.username }}</a>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#!">Subscription
                                    level<br/> {{ app.user.subscription.getSubscriptionPlan().name }}</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path("subscription_cancel") }}">Cancel
                                    subscription</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path("app_logout") }}">logout</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Page content-->
        <div class="container-fluid">
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }} alert-dismissible fade show" role="alert">
                        <strong>{{ type }}</strong> {{ message|raw }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
        crossorigin="anonymous"></script>
<script
        type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.1/mdb.min.js"
></script>
<script src="/js/custom.js"></script>
</body>

</html>
