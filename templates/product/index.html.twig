{% extends 'logged.html.twig' %}

{% block title %}Hello IndexController!{% endblock %}

{% block body %}
    <div class="example-wrapper">
    <div class="container">
    <div class="row mt-5">
        {% for product in paginator.results %}
        <div class="col-md-3 col-sm-4 col-xs-6">
            <div class="card h-100">
                <div class="card-body text-center">
                    <h5 class="card-title">{{ product.name|capitalize }}</h5>
                    <p class="card-text">{{ product.category.name }}</p>
                    <a class="btn btn-primary"
                       href={{ path("plan_index", {id: product.id}) }}>Check</a>
                </div>
            </div>
        </div>
        {% if loop.index % 4 ==0 %}
    </div>
    <div class="row mt-5">
        {% endif %}
        {% endfor %}
    </div>

    <ul class="pagination pagination-md justify-content-center">
        {% if paginator.hasPreviousPage %}
            <li class="page-item">
                <a class="page-link"
                   href="{{ path('products_index', {page: paginator.previousPage}) }}"
                   rel="previous">
                    <i class="fa fw fa-long-arrow-left"></i> previous
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link"><i class="fa fw fa-arrow-left"></i> previous</span>
            </li>
        {% endif %}

        {% for i in 1..paginator.lastPage %}
            {% if i == paginator.currentPage %}
                <li class="page-item active">
                    <span class="page-link">{{ i }} <span class="sr-only">current</span></span>
                </li>
            {% else %}
                <li class="page-item"><a class="page-link"
                                         href="{{ path('products_index', {page: i}) }}">{{ i }}</a>
                </li>
            {% endif %}
        {% endfor %}

        {% if paginator.hasNextPage %}
            <li class="page-item">
                <a class="page-link"
                   href="{{ path('products_index', {page: paginator.nextPage}) }}">
                    <span>next <i class="fa fw fa-long-arrow-right"></i></span>
                </a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link">next <i class="fa fw fa-long-arrow-right"></i></span>
            </li>
        {% endif %}
    </ul>
{% endblock %}