{% extends 'base.html.twig' %}
{% block title %}Log in{% endblock %}
{% block body %}
    <div id="intro" class="bg-image shadow-2-strong">
        <div class="mask d-flex align-items-center h-100" style="background-color: rgba(0, 0, 0, 0.8);">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-xl-5 col-md-8">
                        <form class="bg-white  rounded-5 shadow-5-strong p-5" action="{{ path('app_login') }}"
                              method="post">
                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <input type="text" id="form1Example1" class="form-control" name="_username"
                                       value="{{ last_username }}"/>
                                <label class="form-label" for="form1Example1">username</label>
                            </div>

                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <input type="password" id="form1Example2" class="form-control" name="_password"/>
                                <label class="form-label" for="form1Example2">Password</label>
                            </div>

                            <!-- 2 column grid layout for inline styling -->
                            <div class="row mb-4">
                                <div class="col d-flex justify-content-center" style="font-size: 12px;">
                                    hint: use interview/interview as credentials
                                </div>
                            </div>

                            <!-- Submit button -->
                            <button type="submit" class="btn btn-primary btn-block">Sign in</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="w3-row">
        <div class="w3-card w3-mobile w3-display-middle w3-col l4 m8 w3-white">
            <div class="w3-container w3-theme">
                <h2>Log innnnnnnnnnnnnnnnnnnnnn</h2>
            </div>
            <div class="w3-container w3-center">
                <img src="{{ asset('assets/icons/logo.svg') }}" alt="Geb Test" class="w3-image">
            </div>
            <form action="{{ path('app_login') }}" method="post" class="w3-container">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                {% if error %}
                    {% if error.messageKey == 'Invalid credentials.' %}
                        <p class="w3-error">&#x26D4;&#xFE0F; Invalid email address or password.<br>Please check your
                            details and try again.</p>
                    {% else %}
                        <p class="w3-error">
                            &#x26D4;&#xFE0F; {{ error.messageKey|trans(error.messageData, 'security') }}</p>
                    {% endif %}
                {% endif %}
                <p>
                    <label class="w3-text-theme" for="username"><strong>Email address</strong></label>
                    <input class="w3-input w3-border w3-light-grey" tabindex="1" type="email" required id="username"
                           name="_username" value="{{ last_username }}">
                </p>
                <p>
                    <label class="w3-text-theme" for="password"><strong>Password</strong></label>
                    <input class="w3-input w3-border w3-light-grey" tabindex="2" type="password" required id="password"
                           name="_password">
                    <a href="#" class="w3-text-blue w3-hover-text-blue-gray" tabindex="5">Forgot your password?</a>
                </p>
                <p>
                    <button class="w3-button w3-black w3-block w3-ripple w3-hover-dark-gray" tabindex="3" type="submit">
                        Login
                    </button>
                </p>
                <p class="w3-center">Need an account? <a href="#" class="w3-text-blue w3-hover-text-blue-gray"
                                                         tabindex="4">Sign up</a></p>
            </form>
        </div>
    </div>
{% endblock %}